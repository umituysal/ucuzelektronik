
@model PagedList.IPagedList<Abc.MvcWebUI.Models.ProductModel>
@using PagedList.Mvc;

<div class=" container pb-5">
    <div class="row">
        <div class="col-md-12">
            @if (Model.Count() == 0)
            {
                <div class="alert " role="alert">
                    <i class="fas fa-exclamation-triangle"></i> Bu kategoride ürün bulunamamıştır.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            else
            {
                <div class="alert " role="alert">
                    <i class="fas fa-check"></i> @Model.Count() ürün bulunmuştur.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true" style="color:#fff;">&times;</span>
                    </button>
                </div>
            }


        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-lg-3 mt-3">
            <div class="bd-example">
                @Html.Action("GetCategories", "Home")
            </div>
        </div>
        <div class="col-md-8 col-lg-9 col-sm-12 mt-3">
            @Html.Partial("ProductList", Model)
        </div>


    </div>
    <div class="page-number">
        @Html.PagedListPager(Model, page => Url.Action("List",
            new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>

</div>