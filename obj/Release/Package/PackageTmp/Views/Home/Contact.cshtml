@model Abc.MvcWebUI.Models.EpostaModel

@{
    ViewBag.Title = "Contact";
}

<div class="container pb-5">

    <!--Section: Contact v.2-->
    <section class="mb-4">

        <!--Section heading-->
        <h2 class=" font-weight-bold text-center my-4 contact-title">Hakkımızda</h2>
        <!--Section description-->
        <p class="text-center  mx-auto mb-5 contact-text">
            Bir sorunuz mu var? Bize buradan mesaj atarak iletebilirsiniz.Kısa zamanda geri dönüş yapılacaktır.
        </p>

        <div class="row">
            @*//burada email durumunu burada kullanıcıya bilgi verilecek*@




            <!--Grid column-->
            <div class="col-md-9 mb-md-0 mb-5">
                @if (ViewData["result"] != null)
                {
                <div class="alert alert-success" role="alert">
                    ViewData["result"]
                </div>
                }
                <div class="form-contact">
                    @using (Html.BeginForm("Contact", "Home", new { id = "myForm" }))
                    {

                        <!--Grid row-->
                        <div class="row">
                            <div class="text-danger" id="error_message">

                            </div>
                            <!--Grid column-->
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    <label for="Name">Adınız</label>
                                    <input type="text" id="Name" name="Name" class=" border-dark">


                                </div>
                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    <label for="Email">Email Adresiniz</label>
                                    <input type="text" id="Email" name="Email" class=" border-dark">
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!--Grid column-->

                        </div>
                        <!--Grid row-->
                        <!--Grid row-->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="md-form mb-0">
                                    <label for="Subject">Mesajın Konusu</label>
                                    <input type="text" id="Subject" name="Subject" class=" border-dark">
                                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <!--Grid row-->
                        <!--Grid row-->
                        <div class="row">

                            <!--Grid column-->
                            <div class="col-md-12">

                                <div class="md-form">
                                    <label for="Message">Mesajınız</label>
                                    <textarea type="text" id="Message" name="Message" rows="4"></textarea>
                                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                </div>

                            </div>
                        </div>



                        <div class="form-group">
                            <div class="btn-contact">
                                <input type="submit" value="Gönder" class="btn btn-dark" />
                            </div>
                        </div>
                    }
                    <div class="status"></div>
                </div>

            </div>
            <!--Grid row-->
            <div class="col-md-3 text-center">
                <ul class="list-unstyled mb-0">
                    <li>
                        <i class="fas fa-map-marker-alt fa-2x"></i>
                        <p>San Francisco, CA 94126, USA</p>
                    </li>

                    <li>
                        <i class="fas fa-phone mt-4 fa-2x"></i>
                        <p>+ 01 234 567 89</p>
                    </li>

                    <li>
                        <i class="fas fa-envelope mt-4 fa-2x"></i>
                        <p>contact@mdbootstrap.com</p>
                    </li>
                </ul>
            </div>
            <!--Grid row-->
        </div>

    </section>
    <!--Section: Contact v.2-->
</div>
<script src="~/theme/js/app.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>














