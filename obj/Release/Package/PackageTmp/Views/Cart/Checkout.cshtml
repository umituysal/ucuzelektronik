@model Abc.MvcWebUI.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}
<style>
    .field-validation-error{color:#f00;}
    .field-validation-valid{display:none;}
    .input-validation-error{border:1px solid #f00 background-color:#fee;}
    .validation-summary-errors{font-weight:bold; color:#f00;}
    .validation-summary-valid{display:none;}
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
          
                <h2 class="checkout-title">Sipariş Bilgileriniz</h2>
                <p class="checkout-text">Lütfen Sipariş Bilgilerinizi Doldurunuz!</p>
        
            <hr />
            <div class="form-checkout">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary()
                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Ad Soyad</label>
                        <div class="col-sm-6 col-md-6">
                            <span class="badge-danger">@User.Identity.Name</span>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Adres Başlığı</label>
                        <div class="col-sm-6 col-md-6">
                            @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "border-dark" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Adres</label>
                        <div class="col-sm-6 col-md-6">
                            @Html.TextBoxFor(x => x.Adres, new { @class = "border-dark" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Şehir</label>
                        <div class="col-sm-6 col-md-6">
                            @Html.TextBoxFor(x => x.Sehir, new { @class = "border-dark" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Semt</label>
                        <div class="col-sm-6 col-md-6">
                            @Html.TextBoxFor(x => x.Semt, new { @class = "border-dark" })
                        </div>
                    </div>


                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Mahalle</label>
                        <div class="col-sm-6 col-md-6">
                            @Html.TextBoxFor(x => x.Mahalle, new { @class = "border-dark" })
                        </div>
                    </div>


                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Posta Kodu</label>
                        <div class="col-sm-6 col-md-6">
                            @Html.TextBoxFor(x => x.PostaKodu, new { @class = "border-dark" })
                        </div>
                    </div>


                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-6">
                            <button class="btn btn-dark btn-check" type="submit">Gönder</button>
                        </div>
                    </div>
                }



            </div>
            </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
