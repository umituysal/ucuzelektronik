@model Abc.MvcWebUI.Models.Cart
@{
    /**/

    ViewBag.Title = "Index";
}

<div class="container" pb-5>
    <div class="row">
        <div class="col-md-12">
            <h2 class="sepet-title">Alışveriş Sepeti</h2>
            <hr />
            @if (Model.CartLines.Count > 0)
            {

                <table class="table table-bordered">
                    <thead>
                    <th></th>
                    <th>Miktar</th>
                    <th>Ürün Adı</th>
                    <th>Fiyatı</th>
                    <th>Tutar</th>
                    <th></th>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartLines)
                        {


                            <tr>
                                <td><img src="~/Upload/@item.Product.Image" width="50" /></td>
                                <td>@item.Quantity</td>
                                <td>@item.Product.Name</td>
                                <td>@item.Product.Price</td>
                                <td>@((item.Product.Price * item.Quantity).ToString("c"))</td>
                                <td>
                                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                    {
                                        @Html.Hidden("Id", item.Product.Id)
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                                            Sepetten Sil
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4"></td>
                            <td>
                                @Model.Total().ToString("c")
                            </td>
                        </tr>
                    </tfoot>
                </table>
                <div class="text-center sepet-alt">
                    <a href="/Home/List" class="btn btn-dark">
                        <i class="fas fa-angle-double-left"></i>
                        Alışverişe Devam Et
                    </a>
                    <a href="/Cart/Checkout" class="btn btn-dark">

                        <i class="fas fa-check"></i>Alışverişi Tamamla
                    </a>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-circle"></i>
                    Alışveriş sepetinizde ürün bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>

