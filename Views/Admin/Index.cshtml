@model IEnumerable<Abc.MvcWebUI.Identity.ApplicationUser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container p-5">
    <div class="panel panel-primary">
        <div class="panel-heading">
            Users
            <div class="btn btn-sm btn-warning"><a href="/RoleAdmin">Kullanıcı Rolü</a></div>
        </div>
        <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3" class="text-center">
                        Kullanıcı Yok
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                </tr>
                }
            }
        </table>
    </div>
</div>

